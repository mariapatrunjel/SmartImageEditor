<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.maria.patrunjel.smartimageeditor.SettingsActivity">
    <TextView
        android:id="@+id/redValue"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:text="R"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintLeft_toRightOf="@+id/redBar"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/blueValue"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:text="B"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/blueBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenValue"/>

    <TextView
        android:id="@+id/greenValue"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:text="G"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/greenBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redValue"/>

    <TextView
        android:id="@+id/redText"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="55dp"
        android:text="R"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/greenText"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:text="G"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redText"/>

    <TextView
        android:id="@+id/blueText"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:text="B"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenText"/>

    <SeekBar
        android:id="@+id/redBar"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:max="50"
        android:progressTint="@android:color/holo_red_dark"
        android:thumbTint="@android:color/holo_red_dark"
        android:tickMark="@android:color/holo_red_dark"
        app:layout_constraintLeft_toRightOf="@+id/redText"
        app:layout_constraintTop_toTopOf="parent"
        />

    <SeekBar
        android:id="@+id/greenBar"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:max="50"
        android:progressTint="@android:color/holo_green_dark"
        android:thumbTint="@android:color/holo_green_dark"
        android:tickMark="@android:color/holo_green_dark"
        app:layout_constraintLeft_toRightOf="@+id/greenText"
        app:layout_constraintTop_toBottomOf="@+id/redBar"
        tools:thumbTint="@android:color/holo_green_dark"
        tools:tickMark="@android:color/holo_green_dark"
        />

    <SeekBar
        android:id="@+id/blueBar"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:max="50"
        android:progressTint="@color/colorPrimaryDark"
        android:thumbTint="@color/colorPrimaryDark"
        android:tickMark="@color/colorPrimaryDark"
        app:layout_constraintLeft_toRightOf="@+id/blueText"
        app:layout_constraintTop_toBottomOf="@+id/greenBar"
        />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-3dp"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:onClick="onClickBackButton"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textContrast"
        android:layout_width="93dp"
        android:layout_height="22dp"
        android:text="Contrast"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/blueBar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <SeekBar
        android:id="@+id/contrastBar"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:max="200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textContrast"/>

    <TextView
        android:id="@+id/textBrightness"
        android:layout_width="94dp"
        android:layout_height="22dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Brightness"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrastBar"/>

    <SeekBar
        android:id="@+id/brightnessBar"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:max="40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBrightness"
        app:layout_constraintVertical_bias="0.011"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickResetButton"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brightnessBar"
        app:layout_constraintVertical_bias="0.057"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"/>

</android.support.constraint.ConstraintLayout>
